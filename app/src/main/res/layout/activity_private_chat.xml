<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android.support.v7.recyclerview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_private_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context="com.media.cluster.cluster.ChatPrivate.PrivateChatActivity">

    <ImageView
        android:id="@+id/private_chat_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/private_chat_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android.support.v7.recyclerview:stackFromEnd ="true"/>



    <android.support.v4.view.ViewPager
        android:id="@+id/private_chats_pager"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        />



</RelativeLayout>