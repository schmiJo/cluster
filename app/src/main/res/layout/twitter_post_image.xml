<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/twitter_post_image_layout1"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            >


            <Button
                android:id="@+id/twitter_post_image_close_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/twitter_composer_close_ic" />

            <Button
                android:id="@+id/twitter_post_image_edit_button1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/twitter_composer_edit_ic" />


            <Button
                android:id="@+id/twitter_post_image_sticker_button1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="54dp"
                android:background="@drawable/twitter_composer_sticker_ic" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/twitter_post_image_layout2"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:visibility="gone">


            <Button
                android:id="@+id/twitter_post_image_close_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/twitter_composer_close_ic" />

            <Button
                android:id="@+id/twitter_post_image_edit_button2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/twitter_composer_edit_ic" />


            <Button
                android:id="@+id/twitter_post_image_sticker_button2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="54dp"
                android:background="@drawable/twitter_composer_sticker_ic" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/twitter_post_image_layout3"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:visibility="gone">


            <Button
                android:id="@+id/twitter_post_image_close_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/twitter_composer_close_ic" />

            <Button
                android:id="@+id/twitter_post_image_edit_button3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/twitter_composer_edit_ic" />


            <Button
                android:id="@+id/twitter_post_image_sticker_button3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="54dp"
                android:background="@drawable/twitter_composer_sticker_ic" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/twitter_post_image_layout4"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:visibility="gone">


            <Button
                android:id="@+id/twitter_post_image_close_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/twitter_composer_close_ic" />

            <Button
                android:id="@+id/twitter_post_image_edit_button4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/twitter_composer_edit_ic" />


            <Button
                android:id="@+id/twitter_post_image_sticker_button4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="54dp"
                android:background="@drawable/twitter_composer_sticker_ic" />


        </FrameLayout>
    </LinearLayout>
</HorizontalScrollView>