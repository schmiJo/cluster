<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_service_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.media.cluster.cluster.Login.AddServiceDataActivity"
    android:background="@color/dialogBackground"
    android:onClick="addServiceDataCancel">
    
    <android.support.v7.widget.CardView
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxWidth = "400dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="6dp"
        android:layout_gravity="center"
        android:onClick="addServiceCardviewClick"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom|end"
            android:padding="8dp">

            <Button
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/secondaryText"
                android:onClick="addServiceDataCancel"
                android:background="?selectableItemBackgroundBorderless"
                />


            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/addServiceLogin"
                android:textColor="@color/secondaryText"
                android:id="@+id/add_service_data_login_button"
                android:background="?selectableItemBackgroundBorderless"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat = "@drawable/speech_service_ic_facebook"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:id="@+id/add_service_data_service_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textColor="#000"
                    android:id="@+id/add_service_data_service_text"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:textSize="20dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="32dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#c5c5c5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:hint="email"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/add_service_data_login_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@drawable/login_selector_bg_edit"
                        android:textCursorDrawable="@drawable/login_bg_input_cursor"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textColorHighlight="@color/colorAccent"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="32dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#c5c5c5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:hint="@string/addServicePassword"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/add_service_data_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:background="@drawable/login_selector_bg_edit"
                        android:textCursorDrawable="@drawable/login_bg_input_cursor"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textColorHighlight="@color/colorAccent"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/addServiceDataError"
                android:textSize="12sp"
                android:textColor="#dd0000"
                android:id="@+id/add_service_data_error_message"
                android:visibility="gone"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>
