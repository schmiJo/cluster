<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:id="@+id/noFeedError">
    <ImageView
        android:layout_width="212.4dp"
        android:layout_height="161.4dp"
        android:src="@drawable/no_feed"
        android:layout_gravity="center"
        android:id="@+id/noFeedErrorImage"
        android:layout_marginBottom="36dp"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/no_feed_message"
        android:textAlignment="center"
        android:textColor="@color/secondaryText"
        android:id="@+id/no_feed_message"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/no_feed_button"
        android:background="?selectableItemBackground"
        android:text="@string/refresh"
        android:textColor="@color/com_facebook_blue"/></LinearLayout>

