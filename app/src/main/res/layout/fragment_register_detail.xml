<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.media.cluster.cluster.Login.RegisterDetailFragment">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="#f2f2f2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/detailHeader"
                android:gravity="center"
                android:id="@+id/textView2" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_me"
            android:textColor="@color/primaryText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="8dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="16dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="200"
                android:maxLines="5"
                android:inputType="textMultiLine"
                android:id="@+id/register_detail_about_me"
                android:textSize="16sp"
                android:hint="@string/about_me_description"
                android:minHeight="40dp"
                android:textCursorDrawable="@drawable/login_bg_input_cursor"
                />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:textColor="@color/primaryText"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="16dp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginBottom="2dp"
            >

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/register_detail_hometown"
            app:mrl_rippleColor="@color/rippleColor"

           >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
            android:layout_marginBottom="1dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:src="@drawable/detail_hometown_button"
            android:layout_height="40dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hometown"
                android:textSize="16sp"
                style="@style/Base.AlertDialog.AppCompat.Light"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/noResponse"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content" />
        </FrameLayout>
        </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginBottom="2dp"
    >
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/rippleColor"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"

            android:id="@+id/register_detail_education">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:src="@drawable/detail_education_button"
                android:layout_height="40dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/education"
                    android:textSize="16sp"
                    style="@style/Base.AlertDialog.AppCompat.Light"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/noResponse"
                    android:id="@+id/register_detail_education_text_field"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginBottom="2dp"
            >
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/register_detail_profession"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/rippleColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:src="@drawable/detail_profession_button"
                android:layout_height="40dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profession"
                    android:textSize="16sp"
                    style="@style/Base.AlertDialog.AppCompat.Light"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/noResponse"
                    android:layout_gravity="bottom"
                    android:id="@+id/register_detail_profession_text_field"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginBottom="2dp">
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/register_detail_relationship"
            app:mrl_rippleColor="@color/rippleColor" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:src="@drawable/detail_relation_button"
                android:layout_height="40dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/relationshipStatus"
                    android:textSize="16sp"
                    style="@style/Base.AlertDialog.AppCompat.Light"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/noResponse"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/register_detail_relationship_text_field"/>
            </FrameLayout>
        </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
        </FrameLayout>







    </LinearLayout>
</ScrollView>