<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/colorPrimaryLight"
    >



    <Button
        android:layout_width="67dp"
        android:layout_height="match_parent"
        android:text="@string/next"
        android:drawableEnd="@drawable/register_ic_next"
        android:textColor="@color/registerAccessDenied"
        android:textAllCaps="false"
        android:id="@+id/register_bar_next"
        android:layout_gravity="end"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_marginEnd="6dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/previous"
        android:drawableStart="@drawable/register_ic_previous"
        android:background="?selectableItemBackgroundBorderless"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:id="@+id/register_bar_previous"
        android:visibility="invisible"
        android:layout_marginStart="6dp"
        />


</FrameLayout>