<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cluster_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.media.cluster.cluster.Login.AddServices.ClusterInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eaeaea"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:src="@drawable/app_logo"
            android:background="#fff"
            android:elevation="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#fff"
            android:elevation="6dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/clusterDescription"
            android:textColor="@color/primaryText"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#fff"
            android:elevation="6dp"
            android:orientation="vertical">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleColor="@color/rippleColor">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:onClick="feedback">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="15dp"
                        app:srcCompat = "@drawable/ic_feedback_blue"/>

                    <!--Drawer Row Title-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/primaryText"
                        android:textSize="15sp"
                        android:text="@string/navSendFeedback"/>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>


            <View android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/dividerColor"
                android:layout_marginStart="48dp"
                />
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleColor="@color/rippleColor">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:onClick="moreInfo">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="15dp"
                        app:srcCompat = "@drawable/ic_globe_blue"/>

                    <!--Drawer Row Title-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/primaryText"
                        android:textSize="15sp"
                        android:text="@string/moreInfo"/>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>


            <View android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/dividerColor"
                android:layout_marginStart="48dp"
                />
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleColor="@color/rippleColor">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:onClick="termsAndConditions">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="15dp"
                        app:srcCompat = "@drawable/ic_terms_conditions_blue"/>

                    <!--Drawer Row Title-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/primaryText"
                        android:textSize="15sp"
                        android:text="@string/termsAndConditions"/>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#fff"
            android:elevation="6dp"
            android:src="@drawable/cluster_pattern" />


    </LinearLayout>

</ScrollView>
