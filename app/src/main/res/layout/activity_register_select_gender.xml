<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_select_month"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dialogBackground"
    tools:context="com.media.cluster.cluster.Login.RegisterSelectMonthActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="6dp"
        android:layout_gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:mrl_rippleColor="@color/rippleColor">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="Male">

                    <RadioButton
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:id="@+id/register_radio_button_male"
                        android:clickable="false"/>

                    <TextView
                        android:text="@string/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/register_row_title_male"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/primaryText"/>
                </FrameLayout>


            </com.balysv.materialripple.MaterialRippleLayout>
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    app:mrl_rippleColor="@color/rippleColor">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Female">

                        <RadioButton
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:id="@+id/register_radio_button_female"
                            android:clickable="false"/>

                        <TextView
                            android:text="@string/female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/register_row_title_female"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:textColor="@color/primaryText"/>
                    </FrameLayout>


                </com.balysv.materialripple.MaterialRippleLayout>
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    app:mrl_rippleColor="@color/rippleColor">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Other">

                        <RadioButton
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:id="@+id/register_radio_button_other"
                            android:clickable="false"/>

                        <TextView
                            android:text="@string/other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/register_row_title_other"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:textColor="@color/primaryText"/>
                    </FrameLayout>


                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    app:mrl_rippleColor="@color/rippleColor">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Alien">

                        <RadioButton
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:id="@+id/register_radio_button_alien"
                            android:clickable="false"/>

                        <TextView
                            android:text="@string/genderAlien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/register_row_title_alien"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:textColor="@color/primaryText"/>
                    </FrameLayout>


                </com.balysv.materialripple.MaterialRippleLayout>
                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>
    </FrameLayout>