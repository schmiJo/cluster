<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_twitter_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogBackground"
    tools:context="com.media.cluster.cluster.Login.TwitterLoginActivity"
    android:onClick="addTwitterDataCancel">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"
        app:contentPadding="16dp"
        app:cardElevation="10dp"
        android:onClick="addTwitterCardView"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logInWithTwitter"
            android:textColor="@color/primaryText"
            android:layout_marginBottom="8dp"
            />

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twitter_login_button"
            />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
