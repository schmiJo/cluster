<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageview_placeholder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@drawable/alien_unidentified"
                        android:tint="#11000000"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.9"
                        android:layout_weight="1"/>



                    <FrameLayout
                        android:id="@+id/framelayout_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/colorVoid"
                        android:orientation="vertical"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.3"
                        android:layout_weight="1"

                        >

                        <LinearLayout
                            android:id="@+id/linearlayout_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="bottom|center"
                                android:text="Jonas Schmidt"
                                android:textColor="@color/primaryText"
                                android:textSize="25sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4dp"
                                android:text="rich_cluster_ceo"
                                android:textColor="@color/secondaryText" />

                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>





            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scrollbars="none"

            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorVoid"
                    android:id="@+id/profile_tab_layout"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/button_clicked"
                    />

                <com.media.cluster.cluster.Login.NonSwipeableViewPager
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/profile_view_pager"

                    />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


        <!--<ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/aaa_temp_profile_pic"/>
            app:layout_behavior="com.media.cluster.cluster.Profile.ProfilePicBehavior"/>
-->
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>